{
  "expo": {
    "name": "Agribeacon DMC",
    "slug": "agribeacon",
    "version": "1.0.0",
    "orientation": "portrait",
    "userInterfaceStyle": "light",

    "icon": "./assets/icon.png",

    "splash": {
      "image": "./assets/icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSBluetoothAlwaysUsageDescription": "This app uses Bluetooth to connect BLE devices",
        "NSBluetoothPeripheralUsageDescription": "This app uses Bluetooth to connect BLE devices"
      }
    },

    "android": {
      "permissions": [
        "BLUETOOTH",
        "BLUETOOTH_ADMIN",
        "BLUETOOTH_SCAN",
        "BLUETOOTH_CONNECT",
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION"
      ],
      "package": "com.anonymous.yourappslug",
      "adaptiveIcon": {
        "foregroundImage": "./assets/icon.png",
        "backgroundColor": "#ffffff"
      },
      "blockedPermissions": [],
      "navigationBar": {
        "visible": "immersive"
      },
      "statusBar": {
        "hidden": true
      }
    },

    "plugins": [
      [
        "react-native-ble-plx",
        {
          "isBackgroundEnabled": true,
          "modes": ["peripheral", "central"],
          "bluetoothAlwaysPermission": "Allow $(PRODUCT_NAME) to use Bluetooth"
        }
      ],
      [
        "@rnmapbox/maps",
        {
          "RNMapboxMapsDownloadToken": "sk.eyJ1IjoicGhhbWl6IiwiYSI6ImNtaHlpYjdncjA0aDgyaXF6YWV0Y3RiN2EifQ.LFy_I6P8E4_umZ5ALIW8gQ"
        }
      ]
    ]
  }
}
